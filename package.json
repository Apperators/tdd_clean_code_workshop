{
    "name": "tddworkshop",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "test": "jest",
      "test:unit": "jest --coverage --runInBand --forceExit --detectOpenHandles",
      "test:watch": "jest --watch",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "reinstall": "([ -f package-lock.json ] && rm package-lock.json); ([ -d node_modules ] && rm -rf node_modules); npm install --legacy-peer-deps && npm ci --legacy-peer-deps"
    },
    "dependencies": {
      "@nestjs/cli": "^7.5.5",
      "@nestjs/common": "^7.6.5",
      "@nestjs/core": "^7.5.3",
      "@nestjs/mongoose": "^7.1.0",
      "@nestjs/platform-express": "^7.5.3",
      "dotenv": "^8.2.0",
      "jsonwebtoken": "^8.5.1",
      "axios": "^0.21.3"
    },
    "devDependencies": {
      "@nestjs/schematics": "^7.2.2",
      "@nestjs/testing": "^7.5.3",
      "@types/jest": "25.2.3",
      "@types/node": "^13.13.30",
      "@types/supertest": "^2.0.8",
      "@typescript-eslint/eslint-plugin": "3.0.2",
      "@typescript-eslint/parser": "3.0.2",
      "eslint": "7.1.0",
      "eslint-config-prettier": "^6.15.0",
      "eslint-plugin-import": "^2.20.1",
      "jest": "27.3.1",
      "prettier": "^1.19.1",
      "supertest": "^4.0.2",
      "ts-jest": "27.0.7",
      "ts-loader": "^6.2.1",
      "typescript": "^3.7.4"
    },
    "jest": {
      "moduleFileExtensions": [
        "js",
        "json",
        "ts"
      ],
      "rootDir": "src",
      "testRegex": ".spec.ts$",
      "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
      },
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
    }
  }
  